<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_topic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="3"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:gravity="center"
            android:background="#564a12"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_srNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_topicname"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="2.3"
            android:text=""
            android:paddingLeft="2dp"
            android:textStyle="bold"
            android:background="#e4b502"
            android:gravity="center_vertical"
            android:textSize="14sp"/>
        <FrameLayout
            android:id="@+id/ll_show_fields"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"

            android:gravity="center"
            android:background="@color/black"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_add_button"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:text="1"
                android:visibility="gone"
                android:layout_gravity="center"
                android:src="@drawable/add_plus_button"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>