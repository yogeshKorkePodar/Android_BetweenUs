<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include
        android:id="@+id/include_header"
        layout="@layout/template_header_with_drawer"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_header"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_date"
        android:layout_width="match_parent"
        android:background="@color/attendance_vertical_line"
        android:paddingBottom="7dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/ed_select_date_for_attendance"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:paddingTop="5dp"
            android:hint="Select Month"
            android:focusable="false"
            android:cursorVisible="false"
            android:textSize="15sp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:drawableRight="@drawable/drop_arrow"
            android:background="@color/white"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="4.1"
                android:id="@+id/ll_header"
                android:background="@color/attendance_vertical_line">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:background="@color/attendance_bg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Roll No"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_weight="2"
                    android:background="@color/attendance_bg"
                    android:layout_marginLeft="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:background="@color/attendance_bg"
                    android:layout_marginLeft="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:background="@color/attendance_bg"
                    android:layout_marginLeft="1dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                </LinearLayout>


            </LinearLayout>
<!--
            <com.podarbetweenus.Utility.LoadMoreListView
                android:id="@+id/android:list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_header">
            </com.podarbetweenus.Utility.LoadMoreListView>-->
            <ListView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_below="@+id/ll_header"
                android:id="@+id/lv_attendance_selection_list">

            </ListView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_no_records_further"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/lv_attendance_selection_list"
                android:text=""
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:textSize="16sp"/>
        </RelativeLayout>

    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/leftfgf_drawer"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/bg_color"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >

        <LinearLayout
            android:id="@+id/lL_drawer"
            style="@style/Match_Wrap_style"
            android:orientation="vertical" >
            <include
                android:layout_width="match_parent"
                android:layout_height="95dp"
                layout="@layout/template_teacher_drawer" />

        </LinearLayout>

        <FrameLayout
            style="@style/wrap_match_style"
            android:layout_below="@+id/lL_drawer"
            android:layout_centerHorizontal="true"
            android:background="@color/white" >


            <ListView
                android:id="@+id/drawerListView"
                style="@style/Both_Match_style"
                android:background="@color/white"
                android:listSelector="@drawable/drawer_list_selector" >
            </ListView>
        </FrameLayout>
    </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>