    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/fees_info_bg"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Description"/>
                <TextView
                    android:id="@+id/tv_colon"
                    android:layout_toRightOf="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="6dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_desc_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_colon"
                    android:text="Term I"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >
                <TextView
                    android:id="@+id/tv_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Payment Mode"/>
                <TextView
                    android:id="@+id/tv_colon1"
                    android:layout_toRightOf="@+id/tv_payment_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_payment_mode_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:paddingBottom="6dp"
                    android:paddingTop="6dp"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_payment_mode"
                    android:text="Cheque"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_receipt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Receipt Date"/>
                <TextView
                    android:id="@+id/tv_colon2"
                    android:layout_toRightOf="@+id/tv_receipt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="6dp"
                    android:layout_marginLeft="-9dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_receipt_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="1dp"
                    android:layout_toRightOf="@+id/tv_colon2"
                    android:text="26-01-2038"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:textStyle="bold"
                    android:text="Amount (Rs.)"/>
                <TextView
                    android:id="@+id/tv_colon4"
                    android:layout_toRightOf="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:paddingLeft="6dp"
                    android:layout_marginLeft="2dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text=":"/>
                <TextView
                    android:id="@+id/tv_amount_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:padding="6dp"
                    android:layout_marginLeft="-9dp"
                    android:layout_toRightOf="@+id/tv_colon4"
                    android:text="22,258.08"/>
            </RelativeLayout>
          <!--  -->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">
