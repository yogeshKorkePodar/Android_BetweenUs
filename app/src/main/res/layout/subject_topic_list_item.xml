<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <LinearLayout
       android:id="@+id/ll_topic"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:weightSum="3"
       android:layout_marginTop="5dp"
       android:orientation="horizontal">
      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="40dp"
          android:layout_weight="0.3"
          android:gravity="center"
          android:background="#564a12"
          android:layout_gravity="center_vertical">

          <TextView
              android:id="@+id/tv_srNo"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="1"
              android:textStyle="bold"
              android:textColor="@color/white"
              android:textSize="15sp"/>
      </LinearLayout>
       <TextView
           android:id="@+id/tv_topicname"
           android:layout_width="0dp"
           android:layout_height="40dp"
           android:layout_weight="2.3"
           android:text=""
           android:paddingLeft="2dp"
           android:textStyle="bold"
           android:background="#f3d52c"
           android:gravity="center_vertical"
           android:textSize="15sp"/>
       <FrameLayout
           android:id="@+id/ll_show_fields"
           android:layout_width="0dp"
           android:layout_height="40dp"
           android:layout_weight="0.4"
           android:gravity="center"
           android:background="@color/black"
           android:layout_gravity="center_horizontal">

           <ImageView
               android:id="@+id/img_add_button"
               android:layout_width="18dp"
               android:layout_height="18dp"
               android:text="1"
               android:layout_gravity="center"
               android:src="@drawable/add_plus_button"/>
       </FrameLayout>
   </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_subfields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_topic"
        android:weightSum="3"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#d3b304"
            android:gravity="center_vertical|center"
            android:layout_height="35dp">
        <TextView
            android:id="@+id/tv_total_logs_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Logs - 14"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#40380c"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:background="#d3b304"
            android:gravity="center_vertical|center"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/tv_log_filled_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logs Filled - 14"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#40380c"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="#4f4a33"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|center"
            android:layout_height="35dp">
            <TextView
                android:id="@+id/tv_view_log"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Logs"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>