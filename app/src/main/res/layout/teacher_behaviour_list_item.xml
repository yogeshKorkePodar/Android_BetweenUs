<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@color/behaviour_listview_odd_row"
        android:weightSum="4">
        <LinearLayout
            android:id="@+id/ll_roll_no"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="0.7"
            android:gravity="center"
            android:background="@color/behaviour_listview_even_row">
            <TextView
                android:id="@+id/student_roll_no"
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:background="@drawable/bahaviour_round_corner"
                android:text=""/>
        </LinearLayout>

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:textSize="16sp"
                android:layout_weight="2.6"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="1dp"
                android:background="@color/behaviour_listview_even_row"
                android:text=""/>

        <LinearLayout
            android:id="@+id/ll_view_behaviour"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:gravity="center"
            android:layout_weight="0.7"
            android:background="@color/behaviour_listview_even_row"
            android:layout_marginLeft="1dp">
            <TextView
                android:layout_width="47dp"
                android:layout_height="30dp"
                android:text="View"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/white"
                android:background="@drawable/bahaviour_round_corner"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>


</RelativeLayout>