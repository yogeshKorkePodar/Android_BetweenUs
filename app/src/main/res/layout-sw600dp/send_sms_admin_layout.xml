<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            layout="@layout/template_header_with_drawer"
            android:id="@+id/include_header"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_below="@+id/include_header">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Subject"
                android:textStyle="bold"/>


            <EditText
                android:id="@+id/ed_select_subject"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Subject"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:paddingRight="10dp"
                android:textSize="18sp"
                android:text="Dear Teacher, Kindly Note"
                android:focusable="false"
                android:cursorVisible="false"
                android:background="@drawable/simple_editext_dark_bg"/>
            <EditText
                android:id="@+id/enter_sms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:hint="Type your message here"
                android:textSize="18sp"
                android:lines="4"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"
                android:imeOptions="actionDone"
                android:background="@drawable/simple_editext_dark_bg"
                android:maxLength="132"/>

            <TextView
                android:id="@+id/tv_charachter_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/tv_charachter_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@drawable/sms_rollno_bg" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_send_sms"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Send SMS"
                android:background="@drawable/sms_rollno_bg"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_gravity="end"/>
                <Button
                    android:id="@+id/btn_attachment"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/btn_send_sms"
                    android:textColor="@color/white"
                    android:background="@drawable/sms_rollno_bg"
                    android:drawableRight="@drawable/clip"
                    android:paddingLeft="10dp"
                    android:visibility="gone"
                    android:paddingRight="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="8dp"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/leftfgf_drawer"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/bg_color"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >

        <LinearLayout
            android:id="@+id/lL_drawer"
            style="@style/Match_Wrap_style"
            android:orientation="vertical" >
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/template_teacher_drawer" />

        </LinearLayout>

        <FrameLayout
            style="@style/wrap_match_style"
            android:layout_below="@+id/lL_drawer"
            android:layout_centerHorizontal="true"
            android:background="@color/white" >


            <ListView
                android:id="@+id/drawerListView"
                style="@style/Both_Match_style"
                android:background="@color/white"
                android:listSelector="@drawable/drawer_list_selector" >
            </ListView>
        </FrameLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>