<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_profile"
        style="@style/Match_Wrap_style"
        android:background="@color/white">

    <include
        android:id="@+id/include_header"
        layout="@layout/template_header_with_drawer"/>
    <LinearLayout
       style="@style/Match_Wrap_style"
        android:orientation="vertical"
        android:layout_below="@+id/include_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
           android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#682273"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/student_resources"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:src="@drawable/subject"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <EditText
            android:id="@+id/ed_cycle_test"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:cursorVisible="false"
            android:focusable="false"
            android:background="@drawable/simple_editext_dark_bg"
            android:drawableRight="@drawable/drop_arrow"
            />
        <EditText
            android:id="@+id/ed_subject"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:cursorVisible="false"
            android:focusable="false"
            android:background="@drawable/simple_editext_dark_bg"
            android:drawableRight="@drawable/drop_arrow"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#AD65B8"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Topics"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/topics"
            android:layout_marginTop="12dp"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_topic"
            android:paddingLeft="5dp"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:textColor="#824200"/>

        <ListView
            android:id="@+id/topics_ListView"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:divider="#dfdfdf"
            android:visibility="visible"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/include_header"
            android:dividerHeight="0.5dp">

        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_no_record"
            android:textSize="18sp"
            android:gravity="start"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:visibility="gone"/>
    </LinearLayout>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/leftfgf_drawer"
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/bg_color"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >

        <LinearLayout
            android:id="@+id/lL_drawer"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical" >
            <include
                android:layout_width="match_parent"
                android:layout_height="210dp"
                layout="@layout/template_drawer" />
        </LinearLayout>
        <FrameLayout
            style="@style/wrap_match_style"
            android:layout_below="@+id/lL_drawer"
            android:layout_centerHorizontal="true"
            android:background="@color/white" >

            <ListView
                android:id="@+id/drawerListView"
                style="@style/Both_Match_style"
                android:dividerHeight="0.5dp"
                android:background="@color/white"
                android:listSelector="@drawable/drawer_list_selector" >
            </ListView>
        </FrameLayout>
    </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>