<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_profile"
        style="@style/Match_Wrap_style"
        android:background="@color/white">
        <RelativeLayout
            android:layout_below="@+id/include_header"
            android:id="@+id/rl_year"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:orientation="horizontal"
            android:background="#2d2c23">
            <ImageView
                android:layout_gravity="left"
                android:id="@+id/img_drawer"
                android:layout_width="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/drawer_icon"
                android:layout_alignParentLeft="true"
                android:layout_height="45dp" />

            <TextView
                style="@style/Both_Wrap_style"
                android:text="Dashboard"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <include
            android:id="@+id/include_menu"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            layout="@layout/teacher_profile_info"
            android:layout_below="@+id/rl_year"
            />
        <include
            android:id="@+id/include_horizontal_line"
            layout="@layout/horizontal_line"
            android:layout_below="@+id/include_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ScrollView
            style="@style/Both_Match_style"
            android:layout_marginTop="5dp"
            android:background="@drawable/podartree_lowresolution"
            android:layout_below="@+id/include_horizontal_line">
            <RelativeLayout
                android:layout_below="@+id/include_menu"
                style="@style/Match_Wrap_style">
                <LinearLayout
                    style="@style/Match_Wrap_style"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        style="@style/Match_Wrap_style"
                        android:layout_weight="2"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:id="@+id/ll_messages"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <FrameLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">
                                <ImageView
                                    android:id="@+id/img_message"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="8dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textSize="18sp"
                                    android:src="@drawable/messagebox_92x92"/>
                                <TextView
                                    android:id="@+id/tv_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginBottom="18dp"
                                    android:textAppearance="?android:attr/textAppearanceLarge" />
                            </FrameLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Messages"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_sms"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/img_sms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:src="@drawable/sms_92x92"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SMS"
                                android:textSize="20sp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        style="@style/Match_Wrap_style"
                        android:layout_weight="2">
                        <LinearLayout
                            android:id="@+id/ll_announcement"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/img_announcement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:src="@drawable/announcementicon_92x92"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Announcement"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_attendance"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:visibility="gone"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/img_attendance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="16sp"
                                android:src="@drawable/att_92x92"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Attendance"
                                android:textSize="20sp"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        style="@style/Match_Wrap_style"
                        android:layout_weight="2"
                        android:visibility="gone">
                        <LinearLayout
                            android:id="@+id/ll_behaviour"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/img_behaviour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:src="@drawable/behaviouricon_92x92"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Behaviour"
                                android:textSize="20sp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_sub_list"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/img_sublist"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="20sp"
                                android:src="@drawable/subjectlist_92x92"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Subject List"
                                android:textSize="20sp"/>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/leftfgf_drawer"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bg_color"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >

        <LinearLayout
            android:id="@+id/lL_drawer"
            style="@style/Match_Wrap_style"
            android:orientation="vertical" >
            <include
                android:layout_width="match_parent"
                android:layout_height="105dp"
                layout="@layout/template_teacher_drawer" />

        </LinearLayout>

        <FrameLayout
            style="@style/wrap_match_style"
            android:layout_below="@+id/lL_drawer"
            android:layout_centerHorizontal="true"
            android:background="@color/white" >


            <ListView
                android:id="@+id/drawerListView"
                style="@style/Both_Match_style"
                android:background="@color/white"
                android:listSelector="@drawable/drawer_list_selector" >
            </ListView>
        </FrameLayout>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>