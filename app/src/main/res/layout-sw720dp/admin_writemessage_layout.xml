<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Both_Match_style">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical|center"
            android:background="@color/message_listview_odd_row">
            <TextView
                android:id="@+id/tv_student"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Student"
                android:textSize="20sp"
                android:paddingRight="18dp"
                android:paddingLeft="18dp"
                android:gravity="center"
                android:background="@color/message_listview_odd_row"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:text="Teacher"
                android:textSize="20sp"
                android:paddingRight="18dp"
                android:paddingLeft="18dp"
                android:gravity="center"
                android:background="@color/message_listview_even_row"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_select_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="visible">
            <RelativeLayout
                android:id="@+id/rl_academic_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:background="#07517a"
                android:layout_below="@+id/include_header">
                <EditText
                    android:id="@+id/ed_academic_year"
                    android:layout_width="610dp"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:hint="Academic Year"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:layout_marginRight="15dp"
                    android:drawableRight="@drawable/drop_arrow"/>
                <ImageView
                    android:id="@+id/img_search_by"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#010e16"
                    android:layout_toRightOf="@+id/ed_academic_year"
                    android:src="@drawable/search_new"/>
                <TextView
                    android:id="@+id/rl_send_sms"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:text="ALL"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#010e16"
                    android:layout_toRightOf="@+id/img_search_by"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20sp"/>

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_search_students"
                android:layout_width="match_parent"
                android:background="@color/message_vertical_line"
                android:paddingBottom="7dp"
                android:visibility="gone"
                android:layout_below="@+id/rl_select_category"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_searchby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search By : "
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true" />
                <RadioGroup
                    android:layout_toRightOf="@+id/tv_searchby"
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="wrap_content">
                    <RadioButton
                        android:id="@+id/radio_button_shift"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:buttonTint="@color/white"
                        android:textSize="20sp"
                        android:button="@null"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/radio_button_selector"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shift"
                        android:textSize="20sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/white"/>
                    <RadioButton
                        android:id="@+id/radio_button_section"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:textSize="18sp"
                        android:button="@null"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/radio_button_selector"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Section"
                        android:textSize="20sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="2dp"
                        android:textColor="@color/white"/>
                    <RadioButton
                        android:id="@+id/radio_button_std"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:textSize="20sp"
                        android:button="@null"
                        android:layout_marginLeft="3dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/radio_button_selector"
                        android:buttonTint="@color/white"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Std"
                        android:layout_marginLeft="2dp"
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/white"/>
                </RadioGroup>
                <LinearLayout
                    android:id="@+id/ll_search_students"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="@drawable/simple_editext_dark_bg"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="2dp"
                    android:layout_below="@+id/radio_group"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/ed_search_name"
                            android:layout_width="660dp"
                            android:layout_height="55dp"
                            android:hint="Enter Search Key"
                            android:paddingLeft="5dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:cursorVisible="true"
                            android:textSize="18sp"/>
                        <ImageView
                            android:id="@+id/img_username_close"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/username_close"
                            android:layout_alignParentRight="true"
                            android:visibility="invisible"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_centerVertical="true"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#010e16"
                        android:layout_toRightOf="@+id/ed_search_name"
                        android:src="@drawable/search_new"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rl_send_sms1"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:padding="7dp"
                    android:layout_toRightOf="@+id/ll_search_students"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="#010e16"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_alignTop="@+id/ll_search_students">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btn_send_sms"
                        android:text="ALL"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center_vertical|center"
                        android:textColor="@color/white"
                        android:src="@drawable/send_sms"/>
                </RelativeLayout>


            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#232323"
                android:gravity="center"
                android:layout_below="@+id/rl_search_students"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:id="@+id/rl_teacher_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:visibility="gone"
                    android:paddingRight="15dp">
                    <ImageView
                        android:id="@+id/img_teacher"
                        android:layout_width="45dp"
                        android:layout_height="35dp"
                        android:src="@drawable/tchr48x48"/>

                </RelativeLayout>
                <View
                    android:layout_width="1.2dp"
                    android:layout_height="60dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="#010e16"
                    android:layout_toRightOf="@+id/img_teacher"
                    />
                <LinearLayout
                    android:id="@+id/ll_content"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:weightSum="3"
                    android:background="#2c749d"
                    >

                    <View
                        android:layout_width="1.2dp"
                        android:layout_height="60dp"
                        android:background="#010e16"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tv_section_value"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="SHIFT"
                        android:textSize="20sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:background="#2c749d"
                        android:textColor="@color/white"
                        android:layout_toRightOf="@+id/tv_section_value"
                        android:id="@+id/tv_shift_value"/>
                    <View
                        android:layout_width="1.2dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#010e16"
                        android:layout_toRightOf="@+id/tv_shift_value"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="SECTION"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:background="#2c749d"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_toRightOf="@+id/tv_shift_value"
                        android:id="@+id/tv_section_value"/>

                    <View
                        android:layout_width="1.2dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#2b0202"
                        android:layout_toRightOf="@+id/tv_division_value"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:text="STD"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#2c749d"
                        android:textStyle="bold"
                        android:id="@+id/tv_standard_value"/>
                </LinearLayout>
            </LinearLayout>
        <ListView
            android:id="@+id/lv_select_students"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
        </ListView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_select_teachers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:visibility="gone">
            <RelativeLayout
                android:id="@+id/rl_search_teachers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:background="@color/message_listview_odd_row"
                android:layout_below="@+id/include_header">
                <LinearLayout
                    android:id="@+id/ll_search_teachers"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:background="@drawable/simple_editext_dark_bg"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="2dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/ed_search_teachers"
                            android:layout_width="600dp"
                            android:layout_height="45dp"
                            android:hint="Enter Teacher Name"
                            android:paddingLeft="5dp"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:singleLine="true"
                            android:imeOptions="actionDone"
                            android:cursorVisible="false"
                            android:textSize="18sp"/>
                        <ImageView
                            android:id="@+id/img_username_teacher_close"
                            android:layout_width="20dp"
                            android:layout_height="25dp"
                            android:src="@drawable/username_close"
                            android:layout_alignParentRight="true"
                            android:visibility="invisible"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_centerVertical="true"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/img_search_teachers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:background="#010e16"
                        android:layout_toRightOf="@+id/ed_search_name"
                        android:src="@drawable/search_new"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_send_message"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="#010e16"
                    android:gravity="center">
                    <CheckBox
                        android:id="@+id/send_message"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:gravity="center|center_vertical"
                        android:button="@null"
                        android:padding="10dp"
                        android:background="@drawable/send_sms"
                        android:layout_gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="#232323"
                android:gravity="center"
                android:layout_below="@+id/rl_search_students"
                android:orientation="horizontal" >

                <View
                    android:layout_width="1.2dp"
                    android:layout_height="50dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="#010e16"
                    android:layout_toRightOf="@+id/img_teacher"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:weightSum="2"
                    android:background="#2c749d"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:text="Teacher Name"
                        android:layout_weight="1.7"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="#2c749d"
                        android:textStyle="bold"
                        android:id="@+id/tv_teacher_name"/>
                    <View
                        android:layout_width="1.2dp"
                        android:layout_height="50dp"
                        android:background="#010e16"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_toRightOf="@+id/tv_section_value"
                        />

                    <LinearLayout
                        android:id="@+id/ll_checkbox"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="0.3"
                        android:layout_gravity="center"
                        android:layout_marginLeft="1dp">
                        <CheckBox
                            android:id="@+id/select_all_checkbox"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:button="@null"
                            android:background="@drawable/selector_checkbox"
                            android:layout_gravity="center|center_vertical"
                            android:layout_marginLeft="40dp"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <ListView
                android:id="@+id/lv_select_teachers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
            </ListView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_no_record"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/lv_select_students"/>
    </LinearLayout>

</RelativeLayout>