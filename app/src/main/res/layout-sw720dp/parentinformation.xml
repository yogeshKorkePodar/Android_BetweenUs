<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout">
    <RelativeLayout
        android:id="@+id/rl_profile"
        style="@style/Match_Wrap_style"
        android:background="@color/white">

    <include
        android:id="@+id/include_header"
        layout="@layout/template_header_with_drawer"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include_header">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/include_header">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:textColor="#01bcbc"
                    android:text="- Communication Information -"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registered Email Id"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:padding="3dp"/>

                <EditText
                    android:id="@+id/ed_username"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="3dp"
                    android:hint="Username"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:maxLength="35"
                    android:inputType="text"
                    android:editable="true"
                    android:background="@drawable/dropdown_edittext"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    android:hint="Mobile No"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="phone"
                    android:textSize="18sp"
                    android:maxLength="10"
                    android:editable="true"
                    android:paddingLeft="3dp"
                    android:background="@drawable/dropdown_edittext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:textColor="#01bcbc"
                    android:text="- Communication Address -"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Building Address"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_bldg_name"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    android:hint="Address"
                    android:maxLength="45"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:inputType="text"
                    android:textSize="18sp"
                    android:editable="true"
                    android:text=""
                    android:paddingLeft="3dp"
                    android:background="@drawable/dropdown_edittext"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Street Name"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_area"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    android:hint="Address"
                    android:textSize="18sp"
                    android:maxLength="45"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:editable="true"
                    android:text="Katraj,flat No 601"
                    android:paddingLeft="3dp"
                    android:background="@drawable/dropdown_edittext"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location/Area"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_location"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    android:hint="Address"
                    android:maxLength="45"
                    android:textSize="18sp"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:text=""
                    android:inputType="text"
                    android:editable="true"
                    android:paddingLeft="3dp"
                    android:background="@drawable/dropdown_edittext"/>
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pin Code"
                    android:textStyle="bold"
                android:textSize="20sp"
                android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:layout_marginTop="5dp"
                    android:hint="Pin Code"
                    android:textSize="18sp"
                    android:maxLength="6"
                    android:editable="true"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:paddingLeft="3dp"
                    android:background="@drawable/dropdown_edittext"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_select_state"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:hint="Select State"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="3dp"
                    android:drawableRight="@drawable/drop_arrow"
                    android:paddingRight="5dp"
                    android:background="@drawable/dropdown_edittext" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_select_city"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:hint="Select City"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="3dp"
                    android:drawableRight="@drawable/drop_arrow"
                    android:paddingRight="5dp"
                    android:background="@drawable/dropdown_edittext" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_select_country"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:hint="Select Country"
                    android:textSize="18sp"
                    android:singleLine="true"
                    android:imeOptions="actionDone"
                    android:layout_marginTop="5dp"
                    android:drawableRight="@drawable/drop_arrow"
                    android:paddingRight="5dp"
                    android:paddingLeft="3dp"
                    android:background="@drawable/dropdown_edittext" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Number"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:padding="3dp"/>
                <EditText
                    android:id="@+id/ed_telephone_no"
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:hint="Contact Number"
                    android:textSize="18sp"
                    android:maxLength="12"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:inputType="number"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="3dp"
                    android:editable="true"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/dropdown_edittext" />
                <LinearLayout
                    android:id="@+id/ll_edit_next_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp">
                    <Button
                        android:id="@+id/btn_edit_info"
                        android:layout_width="0dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:text="Edit"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/loginbtn_corner"/>
                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="0dp"
                        android:layout_height="57dp"
                        android:text="Next"
                        android:visibility="gone"
                        android:textSize="22sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/loginbtn_corner"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_save_cancel_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp">
                    <Button
                        android:id="@+id/btn_save_info"
                        android:layout_width="0dp"
                        android:layout_height="57dp"
                        android:layout_weight="1"
                        android:text="Save"
                        android:textSize="22sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/loginbtn_corner"/>
                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:layout_height="57dp"
                        android:text="Cancel"
                        android:textSize="22sp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:textColor="@color/white"
                        android:background="@drawable/loginbtn_corner"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/leftfgf_drawer"
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/bg_color"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >

    <LinearLayout
        android:id="@+id/lL_drawer"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical" >
        <include
            android:layout_width="match_parent"
            android:layout_height="220dp"
            layout="@layout/template_drawer" />
    </LinearLayout>
    <FrameLayout
        style="@style/wrap_match_style"
        android:layout_below="@+id/lL_drawer"
        android:layout_centerHorizontal="true"
        android:background="@color/white" >

        <ListView
            android:id="@+id/drawerListView"
            style="@style/Both_Match_style"
            android:dividerHeight="0.5dp"
            android:background="@color/white"
            android:listSelector="@drawable/drawer_list_selector" >
        </ListView>
    </FrameLayout>
    </RelativeLayout>
    </android.support.v4.widget.DrawerLayout>